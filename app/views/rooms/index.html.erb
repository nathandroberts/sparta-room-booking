<p id="notice"><%= notice %></p>

<h1 class="add_top_margin">Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><p class="room_squares" style="background-color: <%= room.color %>;"></p></td>

        <td><%= link_to 'Show,', room %>
            <%= link_to 'Edit,', edit_room_path(room) %>
            <%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
