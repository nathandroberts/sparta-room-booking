<p class="add_top_margin">
  <strong>Date:</strong>
  <%= @booking.date %>
</p>

<p>
  <strong>Starttime:</strong>
  <%= (@booking.starttime).strftime("%T").to_s %>
</p>

<p>
  <strong>Endtime:</strong>
  <%= (@booking.endtime).strftime("%T").to_s %>
</p>

<p>
  <strong>Description:</strong>
  <%= @booking.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @booking.user_id %>
</p>

<p>
  <strong>Room:</strong>
  <%= @booking.room_id %>
</p>

